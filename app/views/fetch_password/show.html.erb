<%= error_messages_for :partner %>
<% form_for @partner || current_user, :url => singular_fetch_password_path, :html => { :method => :put } do |p| %>
  <%= p.password_field :password, :label => "Password" %>
  <%= p.password_field :password_confirmation, :label => "Password Confirmation" %>
  <%= submit_tag "Update" %>
<% end %>