<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script> 

  <%= javascript_include_merged :application %>
  <title><%= APP_TITLE %></title>
  <%= stylesheet_link_merged :application %>

  <script type="text/javascript">
    Cufon.replace('h1#site_title');
    Cufon.replace('h2#the', {
      color: '-linear-gradient(0.1=#EEEEFF, 1=#FFFFFF)'
    });
    Cufon.replace('h1#democratic_party', {
      color: '-linear-gradient(0.1=#EEEEFF, 1=#FFFFFF)'
    });
  </script>
  <!--[if IE]>
  <%= stylesheet_link_merged :ie %>
  <![endif]-->
</head>
<body>
  <div id="container" class="container">
    <div id="left" class="span-4">
    </div>
    <div id="center" class="span-24">
      <div id="header" class="span-24 last">
        <%= render :partial => "shared/header" %>
      </div>
      <div id="main" class="span-24 last">
        <div id="session_header">
          <%= session_header %>
        </div>
        <div id="flash">
          <%= flash_helper %>
        </div>
        <%= yield %>
      </div>
      <div id="main_bottom" class="span-24 last">
        <div id="main_bottom_left">
        </div>
        <div id="main_bottom_right">
        </div>
      </div>
      <div id="footer" class = "span-24 last">
        <%= render :partial => "shared/footer" %>
      </div>
    </div>
    <div id="right" class="span-4 last">
    </div>
  </div>
  <script type="text/javascript"> Cufon.now(); </script>
</body>
</html>
